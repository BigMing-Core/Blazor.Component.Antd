@inherits LuanNiao.Blazor.Core.LNBCBase
@using LuanNiao.Blazor.Component.Antd.Icons
@using Microsoft.AspNetCore.Components.Web
@using LuanNiao.Blazor.Component.Antd.Tooltip


<div class="@ClassName" id="@($"maindiv_{IdentityKey}")">
    <div class="ant-slider-rail"></div>
    <div class="ant-slider-track" style="@_sliderTrackStyle">
    </div>
    <div class="ant-slider-step">
    </div>

    @if (Range)
    {
        <div id="@($"lefthandle_{IdentityKey}")" class="ant-slider-handle" role="slider" style="@_leftHandleStyle">
            <LNTooltip CStyle="width:100%;height:100%" Placement="PlacementType.Bottom" >
                <Title>@(string.Format(TipFormatter, PrettifyValue(_currentLeftValue)))</Title>
            </LNTooltip>
        </div>
    }


    <div id="@($"righthandle_{IdentityKey}")" class="ant-slider-handle" role="slider" style="@_rightHandleStyle">
        <LNTooltip CStyle="width:100%;height:100%" Placement="PlacementType.Bottom" >
            <Title>@(string.Format(TipFormatter, PrettifyValue(_currentRightValue))) </Title>
        </LNTooltip>
    </div>


    <div class="ant-slider-mark">
    </div>
</div>