@inherits LuanNiao.Blazor.Core.LNBCBase
@using LuanNiao.Blazor.Component.Antd.Icons
@using Microsoft.AspNetCore.Components.Web

<button type="@_htmlType" class="@ClassName"
        disabled="@_disabled"
        href="@_href" target="@_target"
        @onclick="()=>{OnClickCallback?.Invoke(this);}"> 
    @if (Loading)
    {
        <LoadingOutlined Spin="true"></LoadingOutlined>
    }
    @if (Icon != null)
    {
        @Icon
    }
    @if (ChildContent != null)
    {
        <span>@ChildContent</span>
    }
    @if (ChildContent == null && Icon == null)//fix the empty child case's style bug
    {
        <span></span>
    }

</button>

