@layout MainLayout
@page "/skleton"
@using LuanNiao.Blazor.Component.Antd.Skeleton
@using LuanNiao.Blazor.Component.Antd.Button


<LuanNiao.Blazor.Component.Antd.Skeleton.Skeleton Loading="@Loading"></LuanNiao.Blazor.Component.Antd.Skeleton.Skeleton>
<LuanNiao.Blazor.Component.Antd.Button.LNButton  OnClickCallback="LoadingToggle" Type="LNButton.BType.Primary">
    Loading @Loading
</LuanNiao.Blazor.Component.Antd.Button.LNButton>
<br />
Active:
<LuanNiao.Blazor.Component.Antd.Skeleton.Skeleton Active="@(true)" Loading="@(true)"></LuanNiao.Blazor.Component.Antd.Skeleton.Skeleton>

@code{
    private bool Loading = false;

    private void LoadingToggle(LNButton _)
    {
        this.Loading = !this.Loading;
        this.StateHasChanged();
    }

}