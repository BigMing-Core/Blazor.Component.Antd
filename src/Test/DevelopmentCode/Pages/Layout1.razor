@page "/layout1"

@using LuanNiao.Blazor.Component.Antd.Layout
@using LuanNiao.Blazor.Component.Antd.Menu
@using LuanNiao.Blazor.Component.Antd.Breadcrumb


<style>



    .site-layout-content {
        background: #fff;
        padding: 24px;
        min-height: 280px;
    }

    .logo {
        width: 120px;
        height: 31px;
        background: rgba(255, 255, 255, 0.2);
        margin: 16px 24px 16px 0;
        float: left;
    }
</style>

<LNLayout ClassName="layout">
    <Header>
        <div class="logo" />
        <HorizontalMenu Theme="MenuBase.MenuTheme.Dark">
            <LuanNiao.Blazor.Component.Antd.Menu.Item key="1">nav 1</LuanNiao.Blazor.Component.Antd.Menu.Item>
            <LuanNiao.Blazor.Component.Antd.Menu.Item key="2">nav 2</LuanNiao.Blazor.Component.Antd.Menu.Item>
            <LuanNiao.Blazor.Component.Antd.Menu.Item key="3">nav 3</LuanNiao.Blazor.Component.Antd.Menu.Item>
        </HorizontalMenu>
    </Header>
    <Content CStyle="padding:0 50px">
        <LNBreadcrumb CStyle="margin:16px 0">
            <ChildContent>
                <LuanNiao.Blazor.Component.Antd.Breadcrumb.Item Href="">Home</LuanNiao.Blazor.Component.Antd.Breadcrumb.Item>
                <LuanNiao.Blazor.Component.Antd.Breadcrumb.Item Href="">List</LuanNiao.Blazor.Component.Antd.Breadcrumb.Item>
                <LuanNiao.Blazor.Component.Antd.Breadcrumb.Item Href="">App</LuanNiao.Blazor.Component.Antd.Breadcrumb.Item>
            </ChildContent>
        </LNBreadcrumb>


        <LNBreadcrumb CStyle="margin:16px 0">
            <Separator>
                <LuanNiao.Blazor.Component.Antd.Icons.ArrowDownOutlined></LuanNiao.Blazor.Component.Antd.Icons.ArrowDownOutlined>


            </Separator>
            <ChildContent>
                <LuanNiao.Blazor.Component.Antd.Breadcrumb.Item>Home</LuanNiao.Blazor.Component.Antd.Breadcrumb.Item>
                <LuanNiao.Blazor.Component.Antd.Breadcrumb.Item>List</LuanNiao.Blazor.Component.Antd.Breadcrumb.Item>
                <LuanNiao.Blazor.Component.Antd.Breadcrumb.Item>App</LuanNiao.Blazor.Component.Antd.Breadcrumb.Item>
            </ChildContent>
        </LNBreadcrumb>

        <div class="site-layout-content">Content</div>
    </Content>
    <Footer CStyle="text-align:center">Ant Design ©2018 Created by Ant UED</Footer>
</LNLayout>

