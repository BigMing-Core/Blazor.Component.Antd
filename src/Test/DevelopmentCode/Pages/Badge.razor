@page "/badge"
@using LuanNiao.Blazor.Component.Antd.Badge
@using LuanNiao.Blazor.Component.Antd.Grid
@using LuanNiao.Blazor.Component.Antd
@using LuanNiao.Blazor.Component.Antd.Icons

    <Row Gutter="@(new MarginGutter() {   Vertial=24})">
        <Col Span="24">
        <br />
        </Col>
        <Col Span="2">
        <br />
        </Col>
        <Col Span="2">
        <LNBadge>

            <a onclick="LuanNiaoBlazor.BlockClickEvent()" class="head-example" />
        </LNBadge>
        </Col>

        <Col Span="2">
        <LNBadge Count="32">

            <a onclick="LuanNiaoBlazor.BlockClickEvent()" class="head-example" />
        </LNBadge>
        </Col>
        <Col Span="2">
        <LNBadge Count="322">

            <a onclick="LuanNiaoBlazor.BlockClickEvent()" class="head-example" />
        </LNBadge>
        </Col>

        <Col Span="2">
        <LNBadge Count="2">

            <a onclick="LuanNiaoBlazor.BlockClickEvent()" class="head-example" />
        </LNBadge>
        </Col>


        <Col Span="2">
        <LNBadge Count="0" ShowZero="true">

            <a onclick="LuanNiaoBlazor.BlockClickEvent()" class="head-example" />
        </LNBadge>
        </Col>


        <Col Span="2">
        <LNBadge Count="0" ShowZero="true" Dot="true">
            <NotificationOutlined />
        </LNBadge>
        </Col>


        <Col Span="2">
        <LNBadge Count="0" ShowZero="true" @ref="_test">
            <a onclick="LuanNiaoBlazor.BlockClickEvent()" class="head-example" />
        </LNBadge>
        <LuanNiao.Blazor.Component.Antd.Button.LNButton OnClickCallback="@Add">add</LuanNiao.Blazor.Component.Antd.Button.LNButton>
        </Col>

    </Row>
@code{
    LNBadge _test = null;

    private void Add(LuanNiao.Blazor.Component.Antd.Button.LNButton _)
    {
        _test.AddNum();
        this.StateHasChanged();
    }
}
<style>
    .head-example {
        width: 42px;
        height: 42px;
        border-radius: 2px;
        background: #eee;
        display: inline-block;
        vertical-align: middle;
    }
</style>