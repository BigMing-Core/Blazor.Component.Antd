@page "/layout4"

@using LuanNiao.Blazor.Component.Antd.Layout
@using LuanNiao.Blazor.Component.Antd.Menu
@using LuanNiao.Blazor.Component.Antd.Breadcrumb
@using LuanNiao.Blazor.Component.Antd.Icons


<style>
    #components-layout-demo-top-side-2 .logo {
        width: 120px;
        height: 31px;
        background: rgba(255, 255, 255, 0.2);
        margin: 16px 28px 16px 0;
        float: left;
    }

    .site-layout-background {
        background: #fff;
    }

    .site-layout-content {
        background: #fff;
        padding: 24px;
        min-height: 280px;
    }

    .logo {
        width: 120px;
        height: 31px;
        background: rgba(255, 255, 255, 0.2);
        margin: 16px 24px 16px 24px;
        float: left;
    }
</style>



<LNLayout CStyle="min-height:100vh">
    <Sider Collapsible="true">
        <div class="logo"></div>
        <InlineMenu Theme="MenuBase.MenuTheme.Dark" DefaultSelectedKeys="@(new[] { "2"})" DefaultOpenKeys="@(new[] { "Testkey"})">
            <MenuItem Key="1">
                <PieChartOutlined />
                <span>Option 1</span>
            </MenuItem>
            <MenuItem Key="2">
                <DesktopOutlined />
                <span>Option 2</span>
            </MenuItem>
            <SubMenu>
                <Title>
                    <span>
                        <UserOutlined />
                        <span>User</span>
                    </span>
                </Title>
                <ChildContent>
                    <MenuItem Key="3">Tom</MenuItem>
                    <MenuItem Key="4">Bill</MenuItem>
                    <MenuItem Key="5">Alex</MenuItem>
                </ChildContent>
            </SubMenu>
            <SubMenu Key="Testkey">
                <Title>
                    <span>
                        <TeamOutlined />
                        <span>Team</span>
                    </span>
                </Title>
                <ChildContent>
                    <MenuItem Key="6">Team 1</MenuItem>
                    <MenuItem Key="8">Team 2</MenuItem>
                </ChildContent>
            </SubMenu>
            <MenuItem Key="9">
                <FileOutlined />
            </MenuItem>
        </InlineMenu>
    </Sider>
    <LNLayout ClassName="site-layout">
        <Header ClassName="site-layout-background" CStyle="padding:0;">
        </Header>
        <Content CStyle="margin:0 16px">
            <LNBreadcrumb CStyle="margin:16px 0">
                <BreadcrumbItem>User</BreadcrumbItem>
                <BreadcrumbItem>Bill</BreadcrumbItem>
            </LNBreadcrumb>

            <div class="site-layout-background" style="padding: 24px; min-height: 360px">
                Bill is a cat.
            </div>
        </Content>
        <Footer CStyle="text-align:center">Ant Design ©2018 Created by Ant UED</Footer>
    </LNLayout>
</LNLayout>

